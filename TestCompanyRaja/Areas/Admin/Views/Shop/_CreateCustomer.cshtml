@model CustomerModel
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card-body">
                <div class="form-group">
                    <span asp-validation-for="@Model.Name" class="text-danger">
                    </span>
                    <br />
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.NationalCode" class="text-danger">
                    </span>
                    <br />
                    <label asp-for="@Model.NationalCode"></label>
                    <input asp-for="@Model.NationalCode" class="form-control" required />
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Mobile" class="text-danger">
                    </span>
                    <br />
                    <label asp-for="@Model.Mobile"></label>
                    <input asp-for="@Model.Mobile" class="form-control" required />
                </div>
                <div class="form-group">
                    <span asp-validation-for="@Model.Address" class="text-danger">
                    </span>
                    <br />
                    <label asp-for="@Model.Address"></label>
                    <input asp-for="@Model.Address" class="form-control" required />
                </div>
            </div>
        </div>
    </div>
</div>