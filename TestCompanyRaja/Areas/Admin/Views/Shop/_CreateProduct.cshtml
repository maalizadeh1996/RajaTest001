@model ProductModel
<div class="container">
    <div class="row">
        <div class="col-12">
                <div class="card-body">
                    <div class="form-group">
                        <span asp-validation-for="@Model.ProductName" class="text-danger">
                        </span>
                        <br />
                        <label asp-for="@Model.ProductName"></label>
                    <input asp-for="@Model.ProductName" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="@Model.Price" class="text-danger">
                        </span>
                        <br />
                        <label asp-for="@Model.Price"></label>
                    <input asp-for="@Model.Price" type="number" class="form-control" required />
                    </div>
                </div>
        </div>
    </div>
</div>